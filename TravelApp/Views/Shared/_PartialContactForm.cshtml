@model ContactFormModel




<script>

    function startAjax() {
        showLoading();
        console.log("ajax start....");

    }

    function completeAjax(httpresponse, status) {

        console.log(httpresponse);
        console.log(status);
        hideLoading();

        console.log("ajax complete...");

    }

    function successAjax(result, status) {

        console.log(result); 
        console.log(status);
        console.log("ajax successAjax....");
    }


    function failureAjax(httpresponse) {

        


        showError("Sistemde bir hata oluştu lütfen daha sonra deneyiniz.");
        console.log("ajax failureAjax....");
    }

    

</script>



<div class="card border-0  overflow-hidden">
    <div class="card-body p-0">
        <div class="">

            <div class="col-sm-12 p-4">
                <div class="text-center">
                </div>

                <div>

                    <a href="https://www.learnrazorpages.com/razor-pages/ajax/unobtrusive-ajax"></a>

                </div>

                


                <form data-ajax-url="/Product/Contact" method="post" data-ajax="true" data-ajax-method="POST" data-ajax-begin="startAjax" data-ajax-success="successAjax" data-ajax-complete="completeAjax" data-ajax-failure="failureAjax" data-ajax-update="#contactFormArea">


                    <input type="hidden" asp-for="RelatedEmlakId" />
                    <!-- Name Input -->
                    <div class="form-floating mb-3">

                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name"></span>


                    </div>

                    <!-- Email Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email"></span>
                    </div>

                    <!-- Message Input -->
                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 10rem;"></textarea>
                        <label asp-for="Description"></label>
                        <span asp-validation-for="Description"></span>

                    </div>

                    <!-- Submit success message -->
                    <div class="d-none" id="submitSuccessMessage">
                        <div class="text-center mb-3">
                            <div class="fw-bolder">Form submission successful!</div>
                            <p>To activate this form, sign up at</p>
                            <a href="https://startbootstrap.com/solution/contact-forms">https://startbootstrap.com/solution/contact-forms</a>
                        </div>
                    </div>

                    <!-- Submit error message -->
                    <div class="d-none" id="submitErrorMessage">
                        <div class="text-center text-danger mb-3">Error sending message!</div>
                    </div>

                    <!-- Submit button -->
                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Gönder</button>
                    </div>
                </form>
                <!-- End of contact form -->

            </div>
        </div>

    </div>
</div>

