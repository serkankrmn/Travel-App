@model CategoryListModel


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kategori Listesi</h6>

        <a class="btn btn-primary" style="float:right" asp-action="New" asp-controller="Category" asp-area="Admin">Yeni Ekle</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th></th>

                    </tr>
                </thead>
                <tfoot>


                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th></th>

                    </tr>
                </tfoot>
                <tbody>


                    @if (!Model.Categories.Any())
                    {
                        <tr>
                            <td colspan="3">
                                Henüz Veri yoktur
                            </td>

                        </tr>
                    }
                    else
                    {

                        foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <a class="btn btn-secondary" asp-action="Edit" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id">Güncelle</a>
                                    <a asp-action="Delete" asp-controller="Category" asp-area="Admin" asp-route-id="@item.Id" asp-route-name="@item.Name" class="btn btn-danger">Sil</a>
                                   
                                </td>

                            </tr>

                        }

                    }




                </tbody>
            </table>
        </div>
    </div>
</div>